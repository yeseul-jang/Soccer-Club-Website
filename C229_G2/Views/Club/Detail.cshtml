@model Club

<h2>Club Details</h2>

<div class="card bg-light">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text text-muted">
            @Model.Address
            <span class="float-right mr-3">Email: @Model.Email</span>
            <span class="float-right mr-3">Phone: @Model.Phone</span>
        </p>
    </div>
</div>

@if (Model.Players.Count > 0)
{
    <h5 class="mt-3">Players</h5>

    <table class="table table-sm table-striped table-bordered mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Phone</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Player player in Model?.Players)
            {
                <tr>
                    <td>@player.PlayerID</td>
                    <td>@player.FirstName</td>
                    <td>@player.LastName</td>
                    <td>@player.Age</td>
                    <td>@player.Phone</td>
                    <td>@player.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center m-5">The club has no registered players</div>
}

<div class="text-center">
    <a asp-action="Create" asp-controller="Player" asp-route-clubId="@Model.ClubID" class="btn btn-primary">Add Player</a>
    <a asp-action="List"   asp-controller="Club" class="btn btn-secondary">Back</a>
</div>