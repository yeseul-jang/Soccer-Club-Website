@model TeamViewModel

<h2>Team</h2>
<p>Please enter the team  details.</p>

<form asp-action="Edit" asp-controller="Team" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Team.TeamID" />
    <div class="form-group">
        <label asp-for="Team.Name"></label>
        <input asp-for="Team.Name" class="form-control" />
        <span asp-validation-for="Team.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Team.Club">Club:</label>
        <select asp-for="SelectedClubID" class="form-control"
                asp-items="@(new SelectList(Model.Clubs,"ClubID","Name"))">
            <option>Please select one</option>
        </select>
        <span asp-validation-for="Team.Club" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" asp-controller="Team" class="btn btn-secondary">Cancel</a>
    </div>

</form>