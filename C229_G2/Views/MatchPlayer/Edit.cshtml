@model MatchPlayerViewModel

<h2>Register Event for a Player</h2>
<p>Please select a player:</p>

<div class="card bg-light">
    <div class="card-body">
        <h5 class="card-title">@Model.MatchPlayer.Match.HomeTeam.Name vs @Model.MatchPlayer.Match.AwayTeam.Name</h5>
        <p class="card-text text-muted">
            @Model.MatchPlayer.Match.Date
            <span class="float-right mr-3">Location: @Model.MatchPlayer.Match.Location</span>
            <span class="float-right mr-3">Referee: @Model.MatchPlayer.Match.Referee</span>
        </p>
    </div>
</div>

<form asp-action="Edit" asp-controller="MatchPlayer" method="post"
      asp-route-matchId="@Model.MatchPlayer.Match.MatchID">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="MatchPlayer.MatchPlayerID" />
    <input type="hidden" asp-for="TeamID" />
    <div class="form-group">
        <label asp-for="MatchPlayer.MatchPlayerID">Player:</label>
        <select asp-for="SelectedTeamPlayerID" class="form-control"
                asp-items="@(new SelectList(Model.TeamPlayers,"TeamPlayerID","Player"))">
            <option>Please select one</option>
        </select>
        <span asp-validation-for="MatchPlayer.MatchPlayerID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MatchPlayer.Goals"></label>
        <input asp-for="MatchPlayer.Goals" class="form-control" />
        <span asp-validation-for="MatchPlayer.Goals" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MatchPlayer.YellowCards"></label>
        <input asp-for="MatchPlayer.YellowCards" class="form-control" />
        <span asp-validation-for="MatchPlayer.YellowCards" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MatchPlayer.RedCards"></label>
        <input asp-for="MatchPlayer.RedCards" class="form-control" />
        <span asp-validation-for="MatchPlayer.RedCards" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Detail" asp-controller="Match"
           asp-route-matchId="@Model.MatchPlayer.Match.MatchID"
           class="btn btn-secondary">Cancel</a>
    </div>

</form>