@model MatchViewModel

<h2>Edit Statistics</h2>
<p>Please modify the statistic details.</p>

<form asp-action="EditST" asp-controller="Match" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Match.MatchID" />
    


    <div class="form-group">
        <label asp-for="Match.HomeFouls">Home Team Fouls:</label>
        <select asp-for="Match.HomeFouls" class="form-control">
            <option value="">Please select...</option>
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Match.HomeCorners">Home Team Corners:</label>
        <select asp-for="Match.HomeCorners" class="form-control">
            <option value="">Please select...</option>
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Match.HomeShotsOnTarget">Home Team ShotsOnTarget:</label>
        <select asp-for="Match.HomeShotsOnTarget" class="form-control">
            <option value="">Please select...</option>
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Match.AwayFouls">Away Team Fouls:</label>
        <select asp-for="Match.AwayFouls" class="form-control">
            <option value="">Please select...</option>
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Match.AwayCorners">Away Team Corners:</label>
        <select asp-for="Match.AwayCorners" class="form-control">
            <option value="">Please select...</option>
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Match.AwayShotsOnTarget">Away Team ShotsOnTarget:</label>
        <select asp-for="Match.AwayShotsOnTarget" class="form-control">
            <option value="">Please select...</option>
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Detail" asp-controller="Match" asp-route-matchID="@Model.Match.MatchID" class="btn btn-secondary">Cancel</a>
    </div>
</form>