
@await Html.PartialAsync("_MatchPartialView")

<div class="container mt-3">
    <div class="row">
        <div class="col-sm">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">@Model.Match.HomeTeam.Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (TeamPlayer teamPlayer in Model?.Match?.HomeTeam.Players)
                    {
                        <tr>
                            <td>@teamPlayer?.Player.FullName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-sm">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">@Model.Match.AwayTeam.Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (TeamPlayer teamPlayer in Model?.Match?.AwayTeam.Players)
                    {
                        <tr>
                            <td>@teamPlayer?.Player.FullName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
